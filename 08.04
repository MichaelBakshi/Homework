        static void IsNumberPrime(int[] arr)
        {
            for (int i = 0; i < arr.Length; i++)
            {
                int number = arr[i];

                int indexer = 2;
                while (number % indexer != 0 && indexer < number)
                {
                    indexer++;
                }

                if (indexer == number)
                {
                    Console.WriteLine("Your number " + number + " is a prime number");
                }
                else
                {
                    Console.WriteLine("Your number " + number + " is not a prime number");
                }

